<h1>Editing Book</h1>
<%=form_with model:@book,url:"/books/#{@book.id}",local:true do |f|%>
<div class="field">
  <%=f.label :book_title,"Title"%>
  <%=f.text_field :title%>
</div>

<div class="field">
  <%=f.label :book_body,"Body"%>
  <%=f.text_area :body%>
</div>

<div class="actions">
  <%=f.submit"Update Book"%>
</div>
<%end%>

<%=link_to "Show",book_path(@book.id)%>
 |
<%=link_to "Back","/books"%>