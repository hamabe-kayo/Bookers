<%if flash[:notice]%>
 <p id="notice">
  <%=flash[:notice]%>
 </p>
<%end%>

<h1>Editing Book</h1>
<%=form_with model:@book,url:"/books/#{@book.id}",local:true do |f|%>

 <%if @book.errors.any?%>
 <div id="error_explanation">
  <h2><%=@book.errors.count%>errors prohidited this book from being saved:</h2>
  <ul><%@book.errors.full_messages.each do |message|%>
   <li><%=message%></li>
      <%end%>
  </ul>
 <%end%>
</div>

<div class="field">
 <%=f.label :title,"Title"%>
 <%=f.text_field :title%>
</div>

<div class="field">
 <%=f.label :body,"Body"%>
 <%=f.text_area :body%>
</div>

<div class="actions">
 <%=f.submit"Update Book"%>
</div>

<%end%>

<%=link_to "Show",book_path(@book.id)%>
 |
<%=link_to "Back","/books"%>